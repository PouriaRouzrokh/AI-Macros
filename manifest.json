{
    "manifest_version": 3,
    "name": "AI Macros",
    "version": "0.01",
    "permissions": ["contextMenus", "activeTab", "storage", "sidePanel"],
    "background": {
      "service_worker": "./dist/background.js",
      "type": "module"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "web_accessible_resources": [{
      "resources": ["public/html/*.html"],
      "matches": ["<all_urls>"]
    }],
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["./dist/content.js"]
        }
      ],
    "side_panel": {
      "default_path": "./public/html/sidepanel.html"
    }
}
  