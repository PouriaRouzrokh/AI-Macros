{
  "manifest_version": 3,
  "name": "AI Macros",
  "version": "1.0",
  "description": "Apply AI macros to your browsing experience",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "action": {
    "default_title": "AI Macros"
  },
  "side_panel": {
    "default_path": "public/html/sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "public/html/model_modal.html",
        "public/html/api_modal.html",
        "src/model_modal.js",
        "src/api_modal.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}